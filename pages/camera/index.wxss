.camera {
    display: flex;
    width: 100%;
    position: fixed;
    top: 0;
    bottom: 0;
    z-index: 10;
    border-left: 136rpx;
    border-color: rgba(0, 0, 0, 0.3);
}
.top {
    width: 100%;
    height: 300rpx;
    background-color: rgba(0, 0, 0, 0.3);
}
.middle {
    width: 100%;
    display: flex;
    height: 480rpx;
}
.center {
    width: 480rpx;
    height: 480rpx;
    border: 2px solid #FCFCFE;
    box-sizing: border-box;
}
.left {
    flex: 1;
    height: 480rpx;
    background-color: rgba(0, 0, 0, 0.3);
}
.right {
    flex: 1;
    height: 480rpx;
    background-color: rgba(0, 0, 0, 0.3);
}
.bottom {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.3);
    display: flex;
    justify-content: center;
}
.handle-button {
    display: flex;
    width: 100%;
    margin: 120rpx 180rpx 0;
    justify-content: space-between;
}
.live-pusher {
    width: 112rpx;
    height: 112rpx;
    margin: 0;
    border-radius: 50%;
    background-color: rgba(0, 0, 0, 0.3);
    color: #fff;
}
